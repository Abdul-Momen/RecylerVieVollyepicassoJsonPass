<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <include layout="@layout/toolbar_two">

    </include>


    <ImageView

        android:padding="20dp"
        android:scaleType="fitXY"
        android:id="@+id/image_view_detail"
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:padding="1dp"
        android:id="@+id/textView_Like_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like " />


    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:id="@+id/textView_name_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />


    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:id="@+id/textView_email_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:id="@+id/textView_phone_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:id="@+id/textView_adress_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adress" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#070000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:id="@+id/textView_company_name_id_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />


</LinearLayout>